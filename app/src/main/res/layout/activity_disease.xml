<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiseaseActivity"
    android:background="@color/noir_fonce">

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:id="@+id/heartDiseaseButton"
        android:backgroundTint="@color/noir_moins_fonce"
        android:text="@string/heart_disease"
        android:textSize="14sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/heartDiseaseButton"
        app:layout_constraintTop_toBottomOf="@id/heartDiseaseButton"
        android:layout_marginTop="10dp"
        android:id="@+id/severeScoliosis"
        android:backgroundTint="@color/noir_moins_fonce"
        android:text="@string/severe_scoliosis"
        android:textSize="14sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/heartDiseaseButton"
        app:layout_constraintTop_toBottomOf="@id/severeScoliosis"
        android:layout_marginTop="10dp"
        android:id="@+id/spinalDamage"
        android:backgroundTint="@color/noir_moins_fonce"
        android:text="@string/spinal_damage"
        android:textSize="14sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/heartDiseaseButton"
        app:layout_constraintTop_toBottomOf="@id/spinalDamage"
        android:layout_marginTop="10dp"
        android:id="@+id/tumor"
        android:backgroundTint="@color/noir_moins_fonce"
        android:text="@string/benign_or_malignant_tumor"
        android:textSize="14sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/heartDiseaseButton"
        app:layout_constraintTop_toBottomOf="@id/tumor"
        android:layout_marginTop="10dp"
        android:id="@+id/hypertention"
        android:backgroundTint="@color/noir_moins_fonce"
        android:text="@string/hypertention"
        android:textSize="14sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        />


    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/continuerDisease"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/continue1"
        android:textSize="12sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        />


</androidx.constraintlayout.widget.ConstraintLayout>