<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProblemAreaActivity"
    android:background="@color/noir_fonce">

    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:id="@+id/weakChestButton"
        android:backgroundTint="@color/noir_moins_fonce"
        android:text="@string/weak_chest"
        android:textSize="16sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weakChestButton"
        android:layout_marginTop="20dp"
        android:id="@+id/slimLegsButton"
        android:backgroundTint="@color/noir_moins_fonce"
        android:text="@string/slim_legs"
        android:textSize="16sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slimLegsButton"
        android:layout_marginTop="20dp"
        android:id="@+id/slimArmsButton"
        android:backgroundTint="@color/noir_moins_fonce"
        android:text="@string/slim_arms"
        android:textSize="16sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slimArmsButton"
        android:layout_marginTop="20dp"
        android:id="@+id/beerBellyButton"
        android:backgroundTint="@color/noir_moins_fonce"
        android:text="@string/beer_belly"
        android:textSize="16sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/continuerButtonProblemArea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/continue1"
        android:textSize="12sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        />

</androidx.constraintlayout.widget.ConstraintLayout>