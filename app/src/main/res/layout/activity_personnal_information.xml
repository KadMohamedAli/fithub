<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonnalInformationActivity"
    android:background="@color/noir_fonce">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15sp">


    <TextView
        android:fontFamily="@font/ms_reference_sans_serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_marginBottom="40sp"
        android:gravity="center"
        android:text="@string/can_we_know_you_king"
        android:textColor="@color/white"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="240dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_for_layout"
        android:orientation="vertical"
        android:paddingHorizontal="35sp"
        android:paddingVertical="20sp"
        android:layout_marginBottom="10sp"
        >

        <TextView
            android:fontFamily="@font/ms_reference_sans_serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/whats_your_date_of_birth"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="165dp"
            android:layout_marginBottom="25sp"/>

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:background="@color/faded_white"
            android:calendarTextColor="@color/white"

            android:id="@+id/datePicker"
            android:minDate="1/1/1950"
            android:maxDate="31/12/2009"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_for_layout"
        android:orientation="vertical"
        android:paddingHorizontal="35sp"
        android:paddingVertical="20sp"
        android:layout_marginBottom="10sp"
        >

        <TextView
            android:fontFamily="@font/ms_reference_sans_serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_should_we_call_you"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="165dp"
            android:layout_marginBottom="25sp"/>

        <TextView
            android:fontFamily="@font/ms_reference_sans_serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_name"
            android:textSize="17sp"
            android:textColor="@color/white">

        </TextView>

        <EditText
            android:fontFamily="@font/ms_reference_sans_serif"
            android:id="@+id/nomEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/faded_white"
            android:hint="@string/name"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10sp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="15sp"
            android:autofillHints="">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_for_layout"
        android:orientation="vertical"
        android:paddingHorizontal="35sp"
        android:paddingVertical="20sp"
        android:layout_marginBottom="10sp"
        >

        <TextView
            android:fontFamily="@font/ms_reference_sans_serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/whats_your_height"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="165dp"
            android:layout_marginBottom="25sp"/>


        <NumberPicker
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:background="@color/faded_white"
            android:id="@+id/heightPicker"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            />

    </LinearLayout>

    <Button
        android:id="@+id/continuerButtonPersonnalInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10sp"
        android:text="@string/continue1"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:padding="15sp">
    </Button>

</LinearLayout>
</ScrollView>