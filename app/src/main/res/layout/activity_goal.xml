<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalActivity"
    android:background="@color/noir_fonce">

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:id="@+id/goalTextView"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/textViewBMI"
        app:layout_constraintTop_toBottomOf="@id/goalTextView"
        app:layout_constraintStart_toStartOf="@+id/goalTextView"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/textViewBMI"
        app:layout_constraintTop_toBottomOf="@id/textViewBMI"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/weightCommentaire"
        android:layout_marginTop="5dp"
        />

    <com.google.android.material.slider.Slider
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/sliderBMI"
        app:layout_constraintStart_toStartOf="@id/goalTextView"
        app:layout_constraintTop_toBottomOf="@id/weightCommentaire"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:valueFrom="0"
        android:valueTo="50"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/sliderBMI"
        app:layout_constraintStart_toStartOf="@id/textViewBMI"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/dailyCalorie"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/dailyCalorie"
        app:layout_constraintStart_toStartOf="@id/dailyCalorie"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ms_reference_sans_serif"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/dailyWater"
        />
    <GridLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="@id/goalTextView"
        app:layout_constraintTop_toBottomOf="@id/dailyWater"
        android:layout_marginTop="40dp"
        android:rowCount="2"
        android:columnCount="4"
        android:background="@color/noir_moins_fonce"
        >
        <TextView
            android:layout_width="144dp"
            android:layout_height="39dp"
            android:fontFamily="@font/ms_reference_sans_serif"
            android:textSize="10sp"
            android:textColor="@color/noir_fonce"
            android:text="@string/suggested_calories"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@color/couleur5"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="39dp"
            android:fontFamily="@font/ms_reference_sans_serif"
            android:textSize="10sp"
            android:textColor="@color/noir_fonce"
            android:text="@string/carbs"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@color/couleur5"
            android:layout_marginEnd="2dp"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="39dp"
            android:fontFamily="@font/ms_reference_sans_serif"
            android:textSize="10sp"
            android:textColor="@color/noir_fonce"
            android:text="@string/fat"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@color/couleur5"
            android:layout_marginEnd="2dp"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="39dp"
            android:fontFamily="@font/ms_reference_sans_serif"
            android:textSize="10sp"
            android:textColor="@color/noir_fonce"
            android:text="@string/protein"
            android:layout_column="3"
            android:layout_row="0"
            android:background="@color/couleur5"
            />
        <TextView
            android:layout_width="144dp"
            android:layout_height="39dp"
            android:fontFamily="@font/ms_reference_sans_serif"
            android:textSize="10sp"
            android:textColor="@color/noir_fonce"
            android:id="@+id/calorieTable"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@color/couleur5"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="39dp"
            android:fontFamily="@font/ms_reference_sans_serif"
            android:textSize="10sp"
            android:textColor="@color/noir_fonce"
            android:id="@+id/carbsTable"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@color/couleur5"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="39dp"
            android:fontFamily="@font/ms_reference_sans_serif"
            android:textSize="10sp"
            android:textColor="@color/noir_fonce"
            android:id="@+id/fatTable"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@color/couleur5"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="39dp"
            android:fontFamily="@font/ms_reference_sans_serif"
            android:textSize="10sp"
            android:textColor="@color/noir_fonce"
            android:id="@+id/proteinTable"
            android:layout_column="3"
            android:layout_row="1"
            android:background="@color/couleur5"
            />

    </GridLayout>
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/continuerGoalActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/continue1"
        android:textSize="12sp"
        android:fontFamily="@font/ms_reference_sans_serif"
        />


</androidx.constraintlayout.widget.ConstraintLayout>